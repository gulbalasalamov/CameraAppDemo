<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gulbalasalamov.cameraappdemo.CameraActivity">

    <Button
        android:id="@+id/button_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fotoğraf Çek" />

    <ImageView
        android:id="@+id/imagaview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/button_photo" />

    <Button
        android:id="@+id/button_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagaview"
        android:text="Video Kayıt" />

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_video" />


</RelativeLayout>
